def collatz(number):
    """判断奇偶数并做相应操作"""
    if number%2==0:
        result=number//2
        print(result)
        return result
    elif number%2==1:
        result=3*number+1
        print(result)
        return result

def main():
    """让用户输入一个整数，并对这个数不断调用此函数，直到函数返回值为1，
    它有时候被称为最简单、不可能的数学问题"""
    number=input("please input a number:")
    number=int(number)
    result=collatz(number)
    while result != 1:
        result=collatz(result)

if __name__=='__main__':
    main()
