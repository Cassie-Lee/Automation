def collatz(number):
    if number%2==0:
        result=number//2
        print(result)
        return result
    elif number%2==1:
        result=3*number+1
        print(result)
        return result
    
def main():
    """新增一个try,except代码块，int函数在传入一个非整数字符串时，会产生ValueError错误，因此用于检测用户是否输入了一个非整数的字符串"""
    number=input("please input a number:")
    try:
        number=int(number)
        result=collatz(number)
        while result != 1:
            result=collatz(result)
    except ValueError:
        print("please input correct int number:")

if __name__=='__main__':
    main()
